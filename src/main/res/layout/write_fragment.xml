<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="24sp"
            android:text="blockNum: "/>

        <EditText
            android:id="@+id/write_block_num_edTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="number"
            android:hint="number"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textSize="24sp"
        android:text="Data"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <EditText
            android:id="@+id/byte1_edTxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="text"
            android:maxLength="2"
            android:hint="00"
            android:text="00"/>

        <EditText
            android:id="@+id/byte2_edTxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="text"
            android:maxLength="2"
            android:hint="00"
            android:text="00"/>

        <EditText
            android:id="@+id/byte3_edTxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="text"
            android:maxLength="2"
            android:hint="00"
            android:text="00"/>

        <EditText
            android:id="@+id/byte4_edTxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="text"
            android:maxLength="2"
            android:hint="00"
            android:text="00"/>

    </LinearLayout>

    <Button
        android:id="@+id/write_tag_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="24sp"
        android:text="write"/>


</LinearLayout>
